<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZalozkaSmazat">

    <LinearLayout
        android:id="@+id/tab4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="368dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Mazání záznamů"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/textSmazatId"
            android:layout_width="360dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:inputType="text"
            android:text="ID záznamu" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:onClick="butSmazatZaznam"
            android:text="Smazat záznam" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:onClick="butSmazatZaznamy"
            android:text="Smazat všechny záznamy" />

    </LinearLayout>

</FrameLayout>